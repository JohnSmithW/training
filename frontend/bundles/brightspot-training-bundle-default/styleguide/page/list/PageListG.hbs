<div class="PageListG" data-module{{include "includes/PageList-attributes.hbs" this}}>
   
    <div class="PageListG-cards">
      {{#if cards}}
        {{#each cards}}
          <div class="PageListG-card {{#if this.alt}}PageListG-card_alt{{/if}}">
            <div class="crumbs">
              {{#each this.crumbs}}
                <span class="crumbs__item {{#if @last}}crumbs__item_alt{{/if}}">{{this}}  {{#if @first}}/{{/if}} </span>
              {{/each}}
            </div>
            <h2 class="PageListG-card__title">{{this.title}}</h2>
            {{#with this.description}}
              <p class="PageListG-card__description">{{this}}</p>
            {{/with}}
            {{#with this.button}}
              <button type="button" class="PageListG-card__button">{{this}}</button>
            {{/with}}
          </div>
        {{/each}}
      {{/if}}
    </div>
</div>

