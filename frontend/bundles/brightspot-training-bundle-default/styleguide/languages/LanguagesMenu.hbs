<bsp-language>
    <div class="LanguagesMenu">
    {{#with items}}
    <div class="LanguagesMenu-text">
        <a class="LanguagesMenu-text-link">{{../currentLanguageCode}}</a>
    </div>
    <ul class="LanguagesMenu-items" data-with-borders data-list-loadmore-items>
        {{#each this}}
            {{render this}}
        {{/each}}
    </ul>
    {{/with}}
    </div>
</bsp-language>
