<div class="Quote" data-module{{#if backgroundColor}} data-with-bg{{/if}}{{#if inverseColors}} data-inverse-colors{{/if}} style="--color-quote-background: {{#with backgroundColor}}{{this}}{{else}}#fff{{/with}};">
    {{include "/link/AnchorLink.hbs" this}}
    <div class="Quote-content">
        <blockquote>
            {{~quote~}}
        </blockquote>

        {{#if attribution}}
            <div class="Quote-attribution">
                {{#if image}}
                    {{#set imageSize="small-square"}}
                        <div class="Quote-attribution-image">{{image}}</div>
                    {{/set}}
                {{/if}}
                <div class="Quote-attribution-text">{{attribution}}</div>
            </div>
        {{/if}}
    </div>
</div>
