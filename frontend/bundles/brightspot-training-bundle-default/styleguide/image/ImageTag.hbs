{{#resize image (fallback (get "imageSize") "large-16x9")}}
    <img class="Image"
        {{~#with ../alt}} alt="{{this}}"{{/with~}}
        {{~#with srcset}} srcset="{{this}}"{{/with~}}
        {{~#with width}} width="{{this}}"{{/with~}}
        {{~#with height}} height="{{this}}"{{/with~}}
        {{~#if (get "tabIndex")}} tabindex="0"{{/if~}}
        {{~#if (get "rolePresentation")}} role="presentation"{{/if~}}
        {{~#with src}} src="{{this}}"{{/with~}}
        {{~#ne (get "lazyLoad") false}} loading="lazy"{{/ne~}}
    >
{{/resize}}
