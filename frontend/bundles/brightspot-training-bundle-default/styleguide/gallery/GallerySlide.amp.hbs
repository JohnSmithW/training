<div class="GallerySlide">
    <div class="GallerySlide-media">
        {{#with mediaContent}}
            {{#set imageSize="large-16x9"}}
                {{image}}
            {{/set}}
        {{/with}}
    </div>
    <div class="GallerySlide-content">
        {{#with infoTitle}}
            <div class="GallerySlide-title">{{this}}</div>
        {{/with}}
        {{#with infoDescription}}
            <div class="GallerySlide-description">{{this}}</div>
        {{/with}}
    </div>
</div>
