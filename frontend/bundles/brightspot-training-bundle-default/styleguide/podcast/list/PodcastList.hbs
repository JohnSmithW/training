<bsp-list-loadmore class="PodcastList" data-module {{include "/page/list/includes/PageList-attributes.hbs" this}}>
    {{include "/page/list/includes/PageList-header.hbs" this}}

    {{#with items}}
        <ul class="PodcastList-items" data-list-loadmore-items>
            {{#each this}}
                <li class="PodcastList-items-item">
                    {{#eq this._template "/podcast/promo/PodcastPromo.hbs"}}
                        {{include "/podcast/promo/PodcastPromo.hbs" this}}
                    {{else}}
                        {{render this}}
                    {{/eq}}
                </li>
            {{/each}}
        </ul>
    {{/with}}
    {{include "/page/list/includes/PageList-footer.hbs" this canPaginate=true}}
</bsp-list-loadmore>
