:root {
  --font-1: "Arial";
  --font-2: "Times";
}

body {
  --font-1: "{{#with font1}}{{this}}{{else}}Roboto{{/with}}";
  --font-2: "{{#with font2}}{{this}}{{else}}Merriweather{{/with}}";

  --font-body: var({{#with bodyFont}}--{{this}}{{else}}--font-1{{/with}});

  --font-headline: var({{#with headlineFont}}--{{this}}{{else}}--font-1{{/with}});

  --font-list-title: var({{#with listTitleFont}}--{{this}}{{else}}--font-1{{/with}});

  --font-promo-title: var({{#with promoTitleFont}}--{{this}}{{else}}--font-1{{/with}});
  --font-promo-description: var({{#with promoDescriptionFont}}--{{this}}{{else}}--font-1{{/with}});

  --font-rte-body: var({{#with rteBodyFont}}--{{this}}{{else}}--font-1{{/with}});

  --font-pull-quote: var({{#with pullQuoteFont}}--{{this}}{{else}}--font-2{{/with}});
}
